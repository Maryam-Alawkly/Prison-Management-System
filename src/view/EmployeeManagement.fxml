<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.EmployeeManagementController"
            style="-fx-background-color: #2c3e50;">

    <!-- Header Section -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Label text="Employee Management System" 
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            
            <!-- Search and Filter Section -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Search:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <TextField fx:id="searchField" promptText="Search by ID, Name, Position, or Department" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 250; -fx-pref-height: 35;" />
                
                <Label text="Dept:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <ComboBox fx:id="filterDepartmentComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                
                <Label text="Role:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <ComboBox fx:id="filterRoleComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                
                <Label text="Status:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <ComboBox fx:id="filterStatusComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                
                <Button text="Search" onAction="#handleSearch" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                
                <Button text="Clear" onAction="#handleClear" 
                       style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                
                <Button text="Refresh" onAction="#handleRefresh" 
                       style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content: Employees Table -->
    <center>
        <VBox spacing="15" style="-fx-padding: 15;">
            <TableView fx:id="employeeTable" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                <columns>
                    <TableColumn fx:id="employeeIdColumn" text="Employee ID" minWidth="100" prefWidth="100" />
                    <TableColumn fx:id="nameColumn" text="Name" minWidth="150" prefWidth="150" />
                    <TableColumn fx:id="positionColumn" text="Position" minWidth="150" prefWidth="150" />
                    <TableColumn fx:id="departmentColumn" text="Department" minWidth="120" prefWidth="120" />
                    <TableColumn fx:id="salaryColumn" text="Salary" minWidth="100" prefWidth="100" />
                    <TableColumn fx:id="roleColumn" text="Role" minWidth="100" prefWidth="100" />
                    <TableColumn fx:id="statusColumn" text="Status" minWidth="100" prefWidth="100" />
                    <TableColumn fx:id="hireDateColumn" text="Hire Date" minWidth="100" prefWidth="100" />
                </columns>
            </TableView>
            
            <!-- Employee Action Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="View Details" onAction="#handleViewDetails" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Annual Salary" onAction="#handleCalculateAnnualSalary" 
                       style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Activate" onAction="#handleActivateEmployee" 
                       style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Deactivate" onAction="#handleDeactivateEmployee" 
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Promote" onAction="#handlePromoteEmployee" 
                       style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Change Password" onAction="#handleChangePassword" 
                       style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 140; -fx-pref-height: 35;" />
            </HBox>
        </VBox>
    </center>

    <!-- Side Panel: Employee Details Form -->
    <right>
        <VBox spacing="20" style="-fx-background-color: #34495e; -fx-padding: 20; -fx-min-width: 350; -fx-max-width: 400;">
            <Label text="Employee Details" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            
            <Separator style="-fx-background-color: #7f8c8d;" />
            
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="120" />
                    <ColumnConstraints minWidth="150" prefWidth="200" />
                </columnConstraints>
                
                <!-- Employee ID -->
                <Label text="Employee ID:" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="employeeIdField" promptText="Enter employee ID" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <!-- Name -->
                <Label text="Name:" style="-fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="nameField" promptText="Enter full name" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <!-- Phone -->
                <Label text="Phone:" style="-fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="phoneField" promptText="Enter phone number" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="2" GridPane.columnIndex="1" />
                
                <!-- Position -->
                <Label text="Position:" style="-fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="positionField" promptText="Enter job position" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="3" GridPane.columnIndex="1" />
                
                <!-- Department -->
                <Label text="Department:" style="-fx-text-fill: white;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <ComboBox fx:id="departmentComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                         GridPane.rowIndex="4" GridPane.columnIndex="1" />
                
                <!-- Salary -->
                <Label text="Salary:" style="-fx-text-fill: white;" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="salaryField" promptText="Enter monthly salary" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="5" GridPane.columnIndex="1" />
                
                <!-- Hire Date -->
                <Label text="Hire Date:" style="-fx-text-fill: white;" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <DatePicker fx:id="hireDatePicker" 
                           style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                           GridPane.rowIndex="6" GridPane.columnIndex="1" />
                
                <!-- Username -->
                <Label text="Username:" style="-fx-text-fill: white;" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <TextField fx:id="usernameField" promptText="Enter username" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="7" GridPane.columnIndex="1" />
                
                <!-- Password -->
                <Label text="Password:" style="-fx-text-fill: white;" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                <PasswordField fx:id="passwordField" promptText="Enter password" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="8" GridPane.columnIndex="1" />
                
                <!-- Role -->
                <Label text="Role:" style="-fx-text-fill: white;" GridPane.rowIndex="9" GridPane.columnIndex="0" />
                <ComboBox fx:id="roleComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                         GridPane.rowIndex="9" GridPane.columnIndex="1" />
                
                <!-- Status -->
                <Label text="Status:" style="-fx-text-fill: white;" GridPane.rowIndex="10" GridPane.columnIndex="0" />
                <ComboBox fx:id="statusComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                         GridPane.rowIndex="10" GridPane.columnIndex="1" />
            </GridPane>
            
            <Separator style="-fx-background-color: #7f8c8d;" />
            
            <!-- CRUD Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Add" onAction="#handleAddEmployee" 
                       style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                <Button text="Update" onAction="#handleUpdateEmployee" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                <Button text="Delete" onAction="#handleDeleteEmployee" 
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
            </HBox>
        </VBox>
    </right>

    <!-- Footer -->
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;" alignment="CENTER">
            <Label text="Prison Management System Â© 2025" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" />
        </HBox>
    </bottom>
</BorderPane>