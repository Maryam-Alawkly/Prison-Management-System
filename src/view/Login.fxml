<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #1e2a3a;" xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   
    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Logo and Title -->
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" 
                       text="Prison Management System" />
                <Label style="-fx-text-fill: #d4d7dc; -fx-font-size: 16px;" 
                       text="Secure Access Portal" />
            </VBox>

            <!-- Login Form -->
            <VBox alignment="CENTER" maxWidth="400" spacing="20" 
                  style="-fx-background-color: #2c3e50; -fx-background-radius: 12; 
                         -fx-padding: 35; -fx-border-color: #3a4a5c; -fx-border-radius: 12; -fx-border-width: 2;">
            
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" 
                       text="Login to System" />
            
                <!-- Username Field -->
                <VBox spacing="6" style="-fx-pref-width: 320;">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #d4d7dc; -fx-font-size: 14px;" text="Username" />
                    <TextField fx:id="usernameField" promptText="Enter your username" 
                               style="-fx-pref-height: 42; -fx-font-size: 14px;
                                      -fx-background-color: #141c26; -fx-text-fill: white;
                                      -fx-background-radius: 6; -fx-border-radius: 6;
                                      -fx-border-color: #3a4a5c; -fx-border-width: 1;" />
                </VBox>
            
                <!-- Password Field -->
                <VBox spacing="6" style="-fx-pref-width: 320;">
                    <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #d4d7dc; -fx-font-size: 14px;" />
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <!-- StackPane -->
                        <StackPane style="-fx-pref-width: 252; -fx-pref-height: 42;">
                            <!-- Hidden password field (underneath) -->
                            <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                           style="-fx-pref-height: 42; -fx-font-size: 14px;
                                                  -fx-background-color: #141c26; -fx-text-fill: white;
                                                  -fx-background-radius: 6; -fx-border-radius: 6;
                                                  -fx-border-color: #3a4a5c; -fx-border-width: 1;" />
                            <!-- Visible password field (on top) - initially hidden -->
                            <TextField fx:id="visiblePasswordField" promptText="Enter your password" 
                                       style="-fx-pref-height: 42; -fx-font-size: 14px;
                                              -fx-background-color: #141c26; -fx-text-fill: white;
                                              -fx-background-radius: 6; -fx-border-radius: 6;
                                              -fx-border-color: #3a4a5c; -fx-border-width: 1;"
                                       visible="false" />
                        </StackPane>              
                        <Button fx:id="showPasswordBtn" text="Show" 
                                style="-fx-background-color: #3a4a5c; -fx-text-fill: white; 
                                       -fx-font-weight: bold; -fx-pref-height: 42; -fx-pref-width: 60;
                                       -fx-background-radius: 6; -fx-font-size: 14px;
                                       -fx-border-color: #4a5f7a; -fx-border-width: 1;" 
                                onAction="#togglePasswordVisibility" />
                    </HBox>
                </VBox>
                
                <!-- Remember Me & Forgot Password -->
                <HBox alignment="CENTER" spacing="20">
                    <CheckBox fx:id="rememberMeCheckbox" style="-fx-text-fill: #d4d7dc; -fx-font-size: 14px;" text="Remember me" />
                    <Hyperlink onAction="#handleForgotPassword" 
                               style="-fx-text-fill: #4a9eff; -fx-underline: true; -fx-font-size: 14px;" 
                               text="Forgot Password?" />
                </HBox>
            
                <!-- Login Button -->
                <Button fx:id="loginButton" onAction="#handleLogin" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; 
                               -fx-font-weight: bold; -fx-font-size: 15px;
                               -fx-pref-width: 320; -fx-pref-height: 45; -fx-background-radius: 6;
                               -fx-border-color: #2980b9; -fx-border-width: 1;
                               -fx-cursor: hand;" 
                        text="Login" />
            
                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-text-fill: #ff6b6b; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 320;" />
            </VBox>
        </VBox>
    </center>
   
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #1a2432;" spacing="20">
            <Button onAction="#handleExit" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 6;
                           -fx-font-size: 14px; -fx-border-color: #c0392b; -fx-border-width: 1;
                           -fx-min-width: 120;" 
                    text="Exit System" />
            <Label style="-fx-text-fill: #a0a5b0; -fx-font-size: 13px;" 
                   text="Copyright @ 2025 Prison Management System v1.0" />
        </HBox>
    </bottom>
</BorderPane>