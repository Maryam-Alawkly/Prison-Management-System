<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   
    <center>
        <VBox alignment="CENTER" spacing="25">
            <!-- Logo and Title -->
            <VBox alignment="CENTER" spacing="15">
                <Label style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" 
                       text="Prison Management System" />
                <Label style="-fx-text-fill: #ecf0f1; -fx-font-size: 16;" 
                       text="Secure Access Portal" />
            </VBox>

            <!-- Login Form -->
            <VBox alignment="CENTER" maxWidth="420" spacing="25" 
                  style="-fx-background-color: white; -fx-background-radius: 15; 
                         -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">
            
                <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" 
                       text="Login to System" />
            
                <!-- Username Field -->
                <VBox spacing="8">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Username" />
                    <TextField fx:id="usernameField" promptText="Enter your username" 
                               style="-fx-pref-width: 320; -fx-pref-height: 45; -fx-font-size: 14;
                                      -fx-background-radius: 8; -fx-border-radius: 8;
                                      -fx-border-color: #bdc3c7; -fx-border-width: 1;" />
                </VBox>
            
                <!-- Password Field - Using StackPane for exact same position -->
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <!-- StackPane -->
                        <StackPane style="-fx-pref-width: 290; -fx-pref-height: 45;">
                            <!-- Hidden password field (underneath) -->
                            <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                           style="-fx-pref-width: 290; -fx-pref-height: 45; -fx-font-size: 14;
                                  -fx-background-radius: 8; -fx-border-radius: 8;
                                  -fx-border-color: #bdc3c7; -fx-border-width: 1;" />
                            <!-- Visible password field (on top) - initially hidden -->
                            <TextField fx:id="visiblePasswordField" promptText="Enter your password" 
                                       style="-fx-pref-width: 290; -fx-pref-height: 45; -fx-font-size: 14;
                              -fx-background-radius: 8; -fx-border-radius: 8;
                              -fx-border-color: #bdc3c7; -fx-border-width: 1;"
                                       visible="false" />
                        </StackPane>              
                        <Button fx:id="showPasswordBtn" text="Show" 
                                style="-fx-background-color: #ecf0f1; -fx-pref-height: 50; -fx-pref-width: 45;
                       -fx-background-radius: 8; -fx-font-size: 12;" 
                                onAction="#togglePasswordVisibility" />
                    </HBox>
                </VBox>
            
                <!-- Remember Me & Forgot Password -->
                <HBox alignment="CENTER" spacing="20">
                    <CheckBox fx:id="rememberMeCheckbox" style="-fx-text-fill: #34495e;" text="Remember me" />
                    <Hyperlink onAction="#handleForgotPassword" 
                               style="-fx-text-fill: #3498db; -fx-underline: true;" 
                               text="Forgot Password?" />
                </HBox>
            
                <!-- Login Button -->
                <Button fx:id="loginButton" onAction="#handleLogin" 
                        style="-fx-background-color: linear-gradient(to right, #3498db, #2980b9);
                               -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;
                               -fx-pref-width: 320; -fx-pref-height: 50; -fx-background-radius: 8;
                               -fx-cursor: hand;" 
                        text="Login" />
            
                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
            </VBox>
        </VBox>
    </center>
   
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #34495e;">
            <Button onAction="#handleExit" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 5;" 
                    text="Exit System" />
            <Label style="-fx-text-fill: #ecf0f1; -fx-padding: 0 20;" 
                   text="Copyright @ 2025 Prison Management System v1.0" />
        </HBox>
    </bottom>
</BorderPane>