<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminDashboardController">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #1a2432; -fx-padding: 25;">
            <HBox alignment="CENTER_LEFT" spacing="25">
                <Label text="Prison Management System" 
                       style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                
                <Label fx:id="welcomeLabel" text="Welcome, Administrator" 
                       style="-fx-text-fill: #d4d7dc; -fx-font-size: 16px; -fx-font-weight: bold;" />                              
            </HBox>
            
            <Label text="Administrator Dashboard - Full System Access &amp; Control" 
                   style="-fx-text-fill: #a0a5b0; -fx-font-size: 14px; -fx-padding: 10 0 0 0;" />
        </VBox>
    </top>
   
    <!-- Main Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 35; -fx-background-color: #141c26;">
            
            <!-- Statistics Row -->
            <HBox spacing="25" alignment="CENTER">
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #3a4a5c; -fx-border-radius: 12; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220;">
                    <Label text="Prisoners" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Label fx:id="prisonerCountLabel" text="0" 
                           style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Button text="Manage Prisoners" onAction="#openPrisonerManagement" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 12 25; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #34495e; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #42576d; -fx-border-radius: 12; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220;">
                    <Label text="Employees" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Label fx:id="employeeCountLabel" text="0" 
                           style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Button text="Manage Employees" onAction="#openEmployeeManagement" 
                            style="-fx-background-color: #42576d; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 12 25; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #3a4a5c; -fx-border-radius: 12; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220;">
                    <Label text="Visitors" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Label fx:id="visitorCountLabel" text="0" 
                           style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Button text="Manage Visitors" onAction="#openVisitorManagement" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 12 25; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #34495e; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #42576d; -fx-border-radius: 12; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220;">
                    <Label text="Cell Occupancy" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Label fx:id="cellOccupancyLabel" text="0%" 
                           style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Button text="Manage Cells" onAction="#openCellManagement" 
                            style="-fx-background-color: #42576d; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 12 25; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180;" />
                </VBox>
            </HBox>
            
            <!-- Management Row -->
            <HBox spacing="25" alignment="CENTER">
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #3a4a5c; -fx-border-radius: 12; -fx-min-width: 280; -fx-pref-width: 280; -fx-max-width: 280; -fx-min-height: 200;">
                    <Label text="Visit Management" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Label text="Schedule &amp; Monitor Visits" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 14px; -fx-padding: 5 0;" />
                    <Button text="Manage Visits" onAction="#openVisitManagement" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 12 25; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #34495e; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #42576d; -fx-border-radius: 12; -fx-min-width: 280; -fx-pref-width: 280; -fx-max-width: 280; -fx-min-height: 200;">
                    <Label text="Reports System" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Label text="Generate &amp; View Reports" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 14px; -fx-padding: 5 0;" />
                    <Button text="View Reports" onAction="#openReports" 
                            style="-fx-background-color: #42576d; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 12 25; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #3a4a5c; -fx-border-radius: 12; -fx-min-width: 280; -fx-pref-width: 280; -fx-max-width: 280; -fx-min-height: 200;">
                    <Label text="Security Center" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Label text="Security &amp; Alert Management" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 14px; -fx-padding: 5 0;" />
                    <Button text="Manage Security" onAction="#openSecurityManagement" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 12 25; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180;" />
                </VBox>
            </HBox>
            
            <!-- Quick Actions Row -->
            <HBox spacing="25" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                <Button text="Refresh" onAction="#refreshDashboard"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 15 25; -fx-font-size: 16px; -fx-min-width: 200; -fx-pref-width: 200;" />
                
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 15 25; -fx-font-size: 16px; -fx-min-width: 200; -fx-pref-width: 200;" />               
            </HBox>
            
        </VBox>
    </center>
   
    <!-- Footer -->
    <bottom>
        <HBox style="-fx-background-color: #1a2432; -fx-padding: 10;" alignment="CENTER">
            <Label text="Administrator Dashboard - Prison Management System Â© 2025 | Full Access Control Panel" 
                   style="-fx-text-fill: #a0a5b0; -fx-font-size: 14px; -fx-font-weight: bold;" />
        </HBox>
    </bottom>
</BorderPane>