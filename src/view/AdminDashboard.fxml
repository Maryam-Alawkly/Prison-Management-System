<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminDashboardController">
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Prison Management System" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                <Label fx:id="welcomeLabel" text="Welcome, Administrator" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Refresh" onAction="#refreshDashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                <Button text="Logout" onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </HBox>
            <Label text="Administrator Dashboard - Full System Access" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12;" />
        </VBox>
    </top>
   
    <center>
        <VBox spacing="20" style="-fx-padding: 25;">
            <!-- Statistics Overview -->
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>
            
                <!-- Row 1: Management Cards -->
                <VBox style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="0">
                    <Label text="Prisoners" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="prisonerCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
                    <Button text="Manage" onAction="#openPrisonerManagement" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #2ecc71; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="1">
                    <Label text="Employees" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="employeeCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
                    <Button text="Manage" onAction="#openEmployeeManagement" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="2">
                    <Label text="Visitors" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="visitorCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
                    <Button text="Manage" onAction="#openVisitorManagement" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #9b59b6; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="3">
                    <Label text="Cell Occupancy" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="cellOccupancyLabel" text="0%" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
                    <Button text="Manage" onAction="#openCellManagement" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <!-- Row 2: Additional Management Options -->
                <VBox style="-fx-background-color: #f39c12; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Label text="Visits" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="Manage Visits" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="Manage" onAction="#openVisitManagement" style="-fx-background-color: #d35400; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #1abc9c; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Reports" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="System Reports" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="View" onAction="#openReports" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="2">
                    <Label text="Security" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="Security Management" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="Manage" onAction="#openSecurityManagement" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #7f8c8d; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="3">
                    <Label text="System" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="System Settings" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="Configure" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            </GridPane>
        </VBox>
    </center>
   
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 10;" alignment="CENTER">
            <Label text="Administrator Dashboard - Prison Management System Â© 2025" style="-fx-text-fill: #7f8c8d;" />
        </HBox>
    </bottom>
</BorderPane>