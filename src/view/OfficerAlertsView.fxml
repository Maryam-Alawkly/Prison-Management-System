<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.OfficerAlertsViewController"
      style="-fx-background-color: #2c3e50; -fx-padding: 20;" spacing="15">

    <!-- Header -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Security Alerts - Officer View" 
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Refresh" onAction="#refreshAlerts" 
               style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
        <Button text="Close" onAction="#closeWindow" 
               style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
    </HBox>

    <!-- Statistics -->
    <HBox spacing="15" alignment="CENTER">
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 8; -fx-border-color: #e74c3c; -fx-border-width: 2;" 
              alignment="CENTER" minWidth="150" prefWidth="150" maxWidth="150">
            <Label text="Active Alerts" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;" />
            <Label fx:id="activeAlertsCount" text="0" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
        
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 8; -fx-border-color: #f39c12; -fx-border-width: 2;" 
              alignment="CENTER" minWidth="150" prefWidth="150" maxWidth="150">
            <Label text="Critical Alerts" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;" />
            <Label fx:id="criticalAlertsCount" text="0" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
        
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 8; -fx-border-color: #3498db; -fx-border-width: 2;" 
              alignment="CENTER" minWidth="150" prefWidth="150" maxWidth="150">
            <Label text="Today's Alerts" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;" />
            <Label fx:id="todaysAlertsCount" text="0" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
    </HBox>

    <!-- Alerts Table -->
    <TableView fx:id="alertsTable" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="typeColumn" text="Type" minWidth="120" prefWidth="120" />
            <TableColumn fx:id="severityColumn" text="Severity" minWidth="80" prefWidth="80" />
            <TableColumn fx:id="descriptionColumn" text="Description" minWidth="200" prefWidth="200" />
            <TableColumn fx:id="locationColumn" text="Location" minWidth="100" prefWidth="100" />
            <TableColumn fx:id="timeColumn" text="Time" minWidth="120" prefWidth="120" />
            <TableColumn fx:id="statusColumn" text="Status" minWidth="80" prefWidth="80" />
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="View Details" onAction="#viewAlertDetails" 
               style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 140; -fx-pref-height: 35;" />
        <Button text="Mark as Reviewed" onAction="#markAsReviewed" 
               style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 150; -fx-pref-height: 35;" />
        <Button text="Create Incident Report" onAction="#createIncidentReport" 
               style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 180; -fx-pref-height: 35;" />
    </HBox>

</VBox>