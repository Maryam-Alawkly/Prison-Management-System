<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.CellManagementController"
            style="-fx-background-color: #2c3e50;">

    <!-- Header Section -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Label text="Cell Management System" 
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            
            <!-- Search and Filter Section -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Search:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <TextField fx:id="searchField" promptText="Search by cell number, type, or security" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;" />
                
                <Label text="Security:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <ComboBox fx:id="filterSecurityComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                
                <Label text="Status:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <ComboBox fx:id="filterStatusComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                
                <Label text="Availability:" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <ComboBox fx:id="filterAvailabilityComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                
                <Button text="Search" onAction="#handleSearch" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                
                <Button text="Clear" onAction="#handleClear" 
                       style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                
                <Button text="Refresh" onAction="#handleRefresh" 
                       style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content: Cells Table -->
    <center>
        <VBox spacing="15" style="-fx-padding: 15;">
            <TableView fx:id="cellTable" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                <columns>
                    <TableColumn fx:id="cellNumberColumn" text="Cell Number" minWidth="100" prefWidth="100" />
                    <TableColumn fx:id="cellTypeColumn" text="Type" minWidth="100" prefWidth="100" />
                    <TableColumn fx:id="capacityColumn" text="Capacity" minWidth="80" prefWidth="80" />
                    <TableColumn fx:id="occupancyColumn" text="Occupancy" minWidth="80" prefWidth="80" />
                    <TableColumn fx:id="occupancyRateColumn" text="Occupancy Rate" minWidth="100" prefWidth="100" />
                    <TableColumn fx:id="securityLevelColumn" text="Security Level" minWidth="120" prefWidth="120" />
                    <TableColumn fx:id="statusColumn" text="Status" minWidth="100" prefWidth="100" />
                </columns>
            </TableView>
            
            <!-- Cell Action Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="View Details" onAction="#handleViewDetails" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Available Cells" onAction="#handleViewAvailablePrisonCells" 
                       style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Maintenance" onAction="#handleMaintenance" 
                       style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Activate" onAction="#handleActivatePrisonCell" 
                       style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
                <Button text="Auto Assign" onAction="#handleAutoAssign" 
                       style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35;" />
            </HBox>
        </VBox>
    </center>

    <!-- Right Panel: Cell Details Form -->
    <right>
        <VBox spacing="20" style="-fx-background-color: #34495e; -fx-padding: 20; -fx-min-width: 400; -fx-max-width: 450;">
            <Label text="Cell Details" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            
            <Separator style="-fx-background-color: #7f8c8d;" />
            
            <!-- Statistics Panel -->
            <HBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 15; -fx-border-radius: 5;">
                <VBox spacing="5" alignment="CENTER">
                    <Label text="Total Cells" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" />
                    <Label fx:id="totalPrisonCellsLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
                <VBox spacing="5" alignment="CENTER">
                    <Label text="Total Capacity" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" />
                    <Label fx:id="totalCapacityLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
                <VBox spacing="5" alignment="CENTER">
                    <Label text="Total Occupancy" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" />
                    <Label fx:id="totalOccupancyLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
                <VBox spacing="5" alignment="CENTER">
                    <Label text="Overall Rate" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" />
                    <Label fx:id="overallOccupancyRateLabel" text="0%" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
            </HBox>
            
            <!-- Cell Information Form -->
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="120" />
                    <ColumnConstraints minWidth="150" prefWidth="200" />
                </columnConstraints>
                
                <!-- Cell Number -->
                <Label text="Cell Number:" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="cellNumberField" promptText="e.g., A-101" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <!-- Cell Type -->
                <Label text="Cell Type:" style="-fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <ComboBox fx:id="cellTypeComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                         GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <!-- Capacity -->
                <Label text="Capacity:" style="-fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="capacityField" promptText="e.g., 4" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="2" GridPane.columnIndex="1" />
                
                <!-- Current Occupancy -->
                <Label text="Occupancy:" style="-fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="occupancyField" promptText="Current count" 
                          style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                          GridPane.rowIndex="3" GridPane.columnIndex="1" />
                
                <!-- Security Level -->
                <Label text="Security Level:" style="-fx-text-fill: white;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <ComboBox fx:id="securityLevelComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                         GridPane.rowIndex="4" GridPane.columnIndex="1" />
                
                <!-- Status -->
                <Label text="Status:" style="-fx-text-fill: white;" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <ComboBox fx:id="statusComboBox" 
                         style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 35;" 
                         GridPane.rowIndex="5" GridPane.columnIndex="1" />
                
                <!-- Available Space -->
                <Label text="Available Space:" style="-fx-text-fill: white;" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <Label fx:id="availableSpaceLabel" text="0" 
                       style="-fx-text-fill: #2ecc71; -fx-font-weight: bold; -fx-font-size: 14px;" 
                       GridPane.rowIndex="6" GridPane.columnIndex="1" />
                
                <!-- Occupancy Rate -->
                <Label text="Occupancy Rate:" style="-fx-text-fill: white;" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <Label fx:id="occupancyRateLabel" text="0%" 
                       style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;" 
                       GridPane.rowIndex="7" GridPane.columnIndex="1" />
            </GridPane>
            
            <Separator style="-fx-background-color: #7f8c8d;" />
            
            <!-- CRUD Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Add" onAction="#handleAddPrisonCell" 
                       style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                <Button text="Update" onAction="#handleUpdatePrisonCell" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
                <Button text="Delete" onAction="#handleDeletePrisonCell" 
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;" />
            </HBox>
            
            <Separator style="-fx-background-color: #7f8c8d;" />
            
            <!-- Prisoners in Cell -->
            <Label text="Prisoners in Selected Cell:" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <ListView fx:id="prisonersListView" 
                     style="-fx-background-color: #2c3e50; -fx-border-color: #7f8c8d; -fx-border-radius: 5; -fx-pref-height: 150;" />
            
            <!-- Cell Details -->
            <Label text="Cell Details:" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <TextArea fx:id="cellDetailsArea" wrapText="true" editable="false"
                     style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #7f8c8d; -fx-border-radius: 5; -fx-pref-height: 100;" />
        </VBox>
    </right>

    <!-- Footer -->
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;" alignment="CENTER">
            <Label text="Prison Management System Â© 2025" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" />
        </HBox>
    </bottom>
</BorderPane>