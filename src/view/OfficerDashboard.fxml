<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OfficerDashboardController">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #1a2432; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Prison Management System" 
                       style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                
                <Label fx:id="welcomeLabel" text="Welcome, Officer" 
                       style="-fx-text-fill: #d4d7dc; -fx-font-size: 16px; -fx-font-weight: bold;" />                              
            </HBox>
            
            <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 8 0 0 0;">
                <Label text="Officer Dashboard - Security &amp; Monitoring Control Panel" 
                       style="-fx-text-fill: #a0a5b0; -fx-font-size: 12px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="currentShiftLabel" text="Shift: 08:00 - 16:00" 
                       style="-fx-text-fill: #a0a5b0; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #2c3e50; -fx-padding: 6 15; -fx-background-radius: 6;" />
            </HBox>
        </VBox>
    </top>
   
    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: #141c26;">
            
            <!-- Statistics Row -->
            <HBox spacing="20" alignment="CENTER">
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #3a4a5c; -fx-border-radius: 10; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220; -fx-min-height: 180;">
                    <Label text="Supervised Prisoners" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label fx:id="supervisedPrisonersLabel" text="0" 
                           style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                    <Label text="Under your supervision" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 12px; -fx-padding: 6 0;" />
                    <Button text="Manage Prisoners" onAction="#openPrisonerManagement" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 13px; -fx-min-width: 160; -fx-pref-width: 160; -fx-pref-height: 40;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #42576d; -fx-border-radius: 10; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220; -fx-min-height: 180;">
                    <Label text="Today's Visits" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label fx:id="todaysVisitsLabel" text="0" 
                           style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                    <Label text="Scheduled for today" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 12px; -fx-padding: 6 0;" />
                    <Button text="Manage Visits" onAction="#openVisitManagement" 
                            style="-fx-background-color: #42576d; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 13px; -fx-min-width: 160; -fx-pref-width: 160; -fx-pref-height: 40;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #3a4a5c; -fx-border-radius: 10; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220; -fx-min-height: 180;">
                    <Label text="Cell Occupancy" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label fx:id="cellStatusLabel" text="0/0" 
                           style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                    <Label text="Current occupancy" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 12px; -fx-padding: 6 0;" />
                    <Button text="Monitor Cells" onAction="#openPrisonCellMonitoring" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 13px; -fx-min-width: 160; -fx-pref-width: 160; -fx-pref-height: 40;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #42576d; -fx-border-radius: 10; -fx-min-width: 220; -fx-pref-width: 220; -fx-max-width: 220; -fx-min-height: 180;">
                    <Label text="Active Alerts" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label fx:id="activeAlertsLabel" text="0" 
                           style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                    <Label text="Requiring attention" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 12px; -fx-padding: 6 0;" />
                    <Button text="View Alerts" onAction="#openAlerts" 
                            style="-fx-background-color: #42576d; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 13px; -fx-min-width: 160; -fx-pref-width: 160; -fx-pref-height: 40;" />
                </VBox>
            </HBox>
            
            <!-- Management Row -->
            <HBox spacing="20" alignment="CENTER">
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #3a4a5c; -fx-border-radius: 10; -fx-min-width: 250; -fx-pref-width: 250; -fx-max-width: 250; -fx-min-height: 180; -fx-pref-height: 180;">
                    <Label text="Guard Duties" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label text="Security Rounds &amp; Assignments" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 12px; -fx-padding: 6 0;" />
                    <Button text="Manage Duties" onAction="#openGuardDuties" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 13px; -fx-min-width: 160; -fx-pref-width: 160; -fx-pref-height: 40;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #42576d; -fx-border-radius: 10; -fx-min-width: 250; -fx-pref-width: 250; -fx-max-width: 250; -fx-min-height: 180; -fx-pref-height: 180;">
                    <Label text="Daily Tasks" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label text="Daily Assignments &amp; Responsibilities" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 12px; -fx-padding: 6 0;" />
                    <Button text="View Tasks" onAction="#openMyTasks" 
                            style="-fx-background-color: #42576d; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 13px; -fx-min-width: 160; -fx-pref-width: 160; -fx-pref-height: 40;" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: #2c3e50; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #3a4a5c; -fx-border-radius: 10; -fx-min-width: 250; -fx-pref-width: 250; -fx-max-width: 250; -fx-min-height: 180; -fx-pref-height: 180;">
                    <Label text="Daily Reports" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label text="Create &amp; Submit Daily Reports" 
                           style="-fx-text-fill: #b0b5c0; -fx-font-size: 12px; -fx-padding: 6 0;" />
                    <Button text="Create Reports" onAction="#openDailyReports" 
                            style="-fx-background-color: #3a4a5c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 13px; -fx-min-width: 160; -fx-pref-width: 160; -fx-pref-height: 40;" />
                </VBox>
            </HBox>
            
            <!-- Quick Actions Row -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                <Button text="Refresh Dashboard" onAction="#refreshDashboard"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180; -fx-pref-height: 40;" />
                
                <Button text="Logout" onAction="#logout"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 14px; -fx-min-width: 180; -fx-pref-width: 180; -fx-pref-height: 40;" />               
            </HBox>
            
        </VBox>
    </center>
   
    <!-- Footer -->
    <bottom>
        <VBox style="-fx-background-color: #1a2432; -fx-padding: 10;" alignment="CENTER">
            <Label text="Officer Dashboard - Prison Management System Â© 2025 | Security Operations Control Panel" 
                   style="-fx-text-fill: #a0a5b0; -fx-font-size: 12px; -fx-font-weight: bold;" />
        </VBox>
    </bottom>
</BorderPane>