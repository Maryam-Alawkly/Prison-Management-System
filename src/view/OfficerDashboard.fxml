<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OfficerDashboardController">
    <top>
        <VBox style="-fx-background-color: #34495e; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Prison Management System" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                <Label fx:id="welcomeLabel" text="Welcome, Officer" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="currentShiftLabel" text="Shift: 08:00 - 16:00" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12;" />
                <Button text="Refresh" onAction="#refreshDashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                <Button text="Logout" onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </HBox>
            <Label text="Officer Dashboard - Security and Monitoring" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12;" />
        </VBox>
    </top>
   
    <center>
        <VBox spacing="20" style="-fx-padding: 25;">
            <!-- Officer Overview -->
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>
            
                <!-- Row 1: Primary Officer Functions -->
                <VBox style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="0">
                    <Label text="Prisoners" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="supervisedPrisonersLabel" text="0 prisoners" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
                    <Label text="Under your supervision" style="-fx-text-fill: white; -fx-font-size: 12;" />
                    <Button text="Manage" onAction="#openPrisonerManagement" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #2ecc71; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="1">
                    <Label text="Visits" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="todaysVisitsLabel" text="0 visits today" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
                    <Label text="Scheduled for today" style="-fx-text-fill: white; -fx-font-size: 12;" />
                    <Button text="Manage" onAction="#openVisitManagement" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="2">
                    <Label text="Cells" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="cellStatusLabel" text="0/0 occupied" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
                    <Label text="Current occupancy" style="-fx-text-fill: white; -fx-font-size: 12;" />
                    <Button text="Monitor" onAction="#openPrisonCellMonitoring" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
                <VBox style="-fx-background-color: #f39c12; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.columnIndex="3">
                    <Label text="Tasks" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="Daily assignments" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="View Tasks" style="-fx-background-color: #d35400; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <!-- Row 2: Secondary Officer Functions -->
                <VBox style="-fx-background-color: #9b59b6; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Label text="Guard Duties" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="Security rounds" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="Manage" onAction="#openGuardDuties" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #1abc9c; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Alerts" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label fx:id="activeAlertsLabel" text="0 active alerts" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="View" onAction="#openAlerts" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="2">
                    <Label text="Reports" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="Daily reports" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="Create" onAction="#openDailyReports" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            
                <VBox style="-fx-background-color: #7f8c8d; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="3">
                    <Label text="Incidents" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                    <Label text="Incident log" style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Button text="Log Incident" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            </GridPane>
        </VBox>
    </center>
   
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 10;" alignment="CENTER">
            <Label text="Officer Dashboard - Security Operations Â© 2025" style="-fx-text-fill: #7f8c8d;" />
        </HBox>
    </bottom>
</BorderPane>