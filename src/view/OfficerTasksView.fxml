<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.OfficerTasksViewController"
      style="-fx-background-color: #2c3e50; -fx-padding: 20;" spacing="15">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="My Tasks - Officer View" 
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Refresh" onAction="#handleRefresh" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8 15;" />
        <Button text="Close" onAction="#closeWindow"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8 15;" />
    </HBox>

    <!-- Task Statistics -->
    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 8; -fx-border-color: #f39c12;" 
              alignment="CENTER">
            <Label text="Pending" style="-fx-text-fill: #bdc3c7;" />
            <Label fx:id="pendingTasksLabel" text="0" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
        
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 8; -fx-border-color: #3498db;" 
              alignment="CENTER">
            <Label text="In Progress" style="-fx-text-fill: #bdc3c7;" />
            <Label fx:id="inProgressTasksLabel" text="0" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
        
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 8; -fx-border-color: #2ecc71;" 
              alignment="CENTER">
            <Label text="Completed" style="-fx-text-fill: #bdc3c7;" />
            <Label fx:id="completedTasksLabel" text="0" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
        
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 8; -fx-border-color: #e74c3c;" 
              alignment="CENTER">
            <Label text="Overdue" style="-fx-text-fill: #bdc3c7;" />
            <Label fx:id="overdueTasksLabel" text="0" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
    </HBox>

    <!-- Task Filter -->
    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #34495e; -fx-border-radius: 5;" alignment="CENTER_LEFT">
        <Label text="Filter:" style="-fx-text-fill: white;" />
        <ComboBox fx:id="statusFilterComboBox" 
                  style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-width: 150;" />
        <ComboBox fx:id="priorityFilterComboBox" 
                  style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-width: 150;" />
        <Button text="Clear Filters" onAction="#clearFilters" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 5 10;" />
    </HBox>

    <!-- Tasks Table -->
    <TableView fx:id="tasksTable" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="taskIdColumn" text="Task ID" minWidth="100" />
            <TableColumn fx:id="titleColumn" text="Title" minWidth="200" />
            <TableColumn fx:id="priorityColumn" text="Priority" minWidth="80" />
            <TableColumn fx:id="statusColumn" text="Status" minWidth="100" />
            <TableColumn fx:id="dueDateColumn" text="Due Date" minWidth="100" />
            <TableColumn fx:id="createdDateColumn" text="Created" minWidth="100" />
            <TableColumn fx:id="categoryColumn" text="Category" minWidth="100" />
            <TableColumn fx:id="actionsColumn" text="Actions" minWidth="150" />
        </columns>
    </TableView>

    <!-- Task Details Section -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #34495e; -fx-border-radius: 5;">
        <Label text="Task Details" style="-fx-text-fill: white; -fx-font-weight: bold;" />
        <TextArea fx:id="taskDetailsArea" wrapText="true" editable="false"
                  style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #7f8c8d; -fx-border-radius: 5; -fx-pref-height: 100;" />
        
        <HBox spacing="10">
            <Button text="Update Status" onAction="#handleUpdateTaskStatus" 
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8 15;" />
            <Button text="Add Progress Note" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8 15;" />
            <Button text="Mark Complete" onAction="#handleMarkComplete" 
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8 15;" />
        </HBox>
    </VBox>

</VBox>